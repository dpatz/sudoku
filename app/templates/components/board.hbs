<div class="sudoku-board">
  {{#each this.boxes as |box boxIndex|}}
    <div class="box">
      {{#each box as |cell cellIndex|}}
        <label class="cell">
          <CellInput @value={{cell}} @onUpdate={{action this.updateBoard boxIndex cellIndex}} />
        </label>
      {{/each}}
    </div>
  {{/each}}
</div>

